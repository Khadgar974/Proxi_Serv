<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title 'Proxi\'Services'%}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}        
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    {% if app.user %}
                        <li><a href="{{path('app_commercant_default')}}">Gestion commercant</a></li> 
                        <li><a href="{{path('app_admin_default')}}">Gestion admin</a></li> 
                    {% else %}
                        <li><a href="{{path('app_register')}}">Inscription</a></li>
                        <li><a href="{{path('app_login')}}">Se connecter</a></li>
                    {% endif %}

                    <li><a href="{{path('app_index_boutiques')}}">Les boutiques</a></li>
                    <li><a href="{{path('app_produit_bonplans')}}">Les bon plans</a></li> 
                    
                    {% if app.request.get('_route') != 'app_home' %}
                        <li><a href="{{path('app_home')}}">retour home</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        {% block body %}{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
