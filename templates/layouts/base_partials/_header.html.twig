                        <li><a class="main-nav-link" href="{{path('app_register')}}">Inscription</a></li>
                        <li><a class="main-nav-link" href="{{path('app_login')}}">Se connecter</a></li>
                    {% endif %}

                    {% if app.request.get('_route') != 'app_index_boutiques' %}
                        <li><a class="main-nav-link" href="{{path('app_index_boutiques')}}">Les boutiques</a></li>
                    {% endif %}

                    {% if app.request.get('_route') != 'app_produit_bonplans' %}
                        <li><a class="main-nav-link" href="{{path('app_produit_bonplans')}}">Les bon plans</a></li> 
                    {% endif %}

                    {% if app.request.get('_route') != 'app_home' %}
                        <li><a href="{{path('app_home')}}">retour home</a></li>
                    {% endif %}
                
                </ul>
            </nav>

            <!-- responsive mobile button -->            
            <button class="btn-mobile-nav">
                <ion-icon
                    class="icon-mobile-nav"
                    name="menu-outline"
                ></ion-icon>
                <ion-icon
                    class="icon-mobile-nav"
                    name="close-outline"
                ></ion-icon>
            </button>                
           
