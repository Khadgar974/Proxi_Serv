<html lang="fr" dir="ltr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0", maximum-scale=1.0, minimum scale=1.0>
        <title>Proxi'Services Boutique</title>
        <link rel="preconnect" href="https://fonts.googleapis.com/%22%3E
        <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Signika:wght@300;400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css%22%3E
        <link rel="stylesheet" href="./asset/css/style.css">
    </head>
    <body>
        <header id="header">
            <div class="wrap">

                <div class="logo">
                    <img src={{asset('images/proxi-service1.png')}} alt="" width="200"/>
                </div>
                <div class="menu">
                    <nav>
                        <ul>
                            {% if app.user %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li><a href="{{path('app_admin_default')}}">Gestion admin</a></li>
                                {% endif %}
                                {% if is_granted('ROLE_COMMERCANT') %}
                                    {% if app.user.boutique %}
                                        <li><a href="{{path('app_commercant_default')}}">Gestion commercant</a></li>
                                    {% else %}                                                
                                        <li><a href="{{path('app_create_boutique')}}">Création boutique</a></li>
                                    {% endif %}                            
                            {% endif %}
                            {% if is_granted('ROLE_USER') %}
                                {% if app.request.get('_route') != 'app_user' %}
                                    <li><a href="{{path('app_user')}}">Mon Compte</a></li>
                                {% endif %}
                            {% endif %}

                            <li><a href="{{path('app_logout')}}">Se déconnecter</a></li> 
                        {% else %}
                        
                            <li><a href="{{path('app_register')}}">Inscription</a></li>
                            <li><a href="{{path('app_login')}}">Se connecter</a></li>
                        {% endif %}

                        {% if app.request.get('_route') != 'app_index_boutiques' %}
                            <li><a href="{{path('app_index_boutiques')}}">Les boutiques</a></li>
                        {% endif %}

                        {% if app.request.get('_route') != 'app_produit_bonplans' %}
                            <li><a href="{{path('app_produit_bonplans')}}">Les bon plans</a></li> 
                        {% endif %}

                        {% if app.request.get('_route') != 'app_home' %}
                            <li><a href="{{path('app_home')}}">retour home</a></li>
                        {% endif %}

                        
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <hr class="hr-text">